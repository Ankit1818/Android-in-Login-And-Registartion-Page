<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="130dp"
        android:src="@drawable/ii"
        android:tint="#ff6500"/>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginHorizontal="25sp"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"/>



    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Phone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
            android:padding="15dp"/>

    </com.google.android.material.textfield.TextInputLayout>>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/e3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" E-Mail"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:padding="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/e4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25sp"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:padding="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/e5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_assistant_photo_black_24dp"
            android:padding="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/e6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:padding="20sp"
            android:layout_marginHorizontal="25sp"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>>


    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_marginTop="5sp"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="125dp"
        android:background="@drawable/bt"/>


    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing in"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/bt"/>



</LinearLayout>